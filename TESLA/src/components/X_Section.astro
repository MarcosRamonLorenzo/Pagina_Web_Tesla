---
import HeroSection from "./HeroSection.astro";
---

<section class=" landing-section h-screen text-center relative overflow-hidden">
  <div class="z-30 relative h-full flex flex-col">
    <header class="relative text-black">
      <h2 class="pt-40 text-5xl font-medium">Model X</h2>
      <p class="text-sm underline">Programe una consulta virtual</p>
    </header>

    <footer
      class="relative text-red-400 flex flex-grow flex-col justify-end pb-20"
    >
      <div class="flex flex-row justify-center gap-x-4 botonConducion">
        <div >
          <a
            class="text-white border-black border-2 rounded font-medium px-12 py-2 inline-block bg-slate-800"
            href="#">Pedido Personalizado</a
          >
        </div>
        <div>
          <a
            class="text-black border-white border-2 rounded font-medium px-12 py-2 inline-block bg-white"
            href="#">Saber m√°s</a
          >
        </div>
      </div>
    </footer>
  </div>
  <div class="absolute top-0 bottom-0 z-10 h-full w-full">
    <img
      class="h-full w-full object-cover"
      src="/public/ModeloX.avif"
      alt=""
    />
  </div>
</section>

<style>
  .botonConducion a:hover {
    transition: 2s;
  }

  .text-sm {
    margin-top: 0.5%;
  }
</style>
